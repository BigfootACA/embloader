<?xml version="1.0" encoding="UTF-8"?>
<screen>
	<styles>
		<style
			name="wrapper_box"
			radius="0"
			border_width="0"
			outline_width="0"
			pad_all="0"
			margin_all="0"/>
	</styles>
	<view width="100%" height="100%">
		<lv_obj
			width="100%"
			height="100%"
			flex_flow="column"
			style_pad_all="8px">
			<style name="wrapper_box"/>
			<lv_label
				text="Embedded Bootloader"
				style_pad_all="8px"
				width="100%"
				height="content"
				style_text_align="center"/>
			<lv_obj
				name="box_device"
				width="100%"
				height="content"
				flex_flow="row"
				hidden="true">
				<style name="wrapper_box"/>
				<lv_label
					text="Device:"
					style_pad_all="2px"
					width="content"
					height="content"/>
				<lv_label
					name="lbl_device"
					text=""
					style_pad_all="2px"
					width="content"
					height="content"/>
			</lv_obj>
			<lv_obj
				name="box_menu"
				width="100%"
				height="content"
				flex_flow="row"
				hidden="true">
				<style name="wrapper_box"/>
				<lv_label
					text="Menu:"
					style_pad_all="2px"
					width="content"
					height="content"/>
				<lv_label
					name="lbl_menu"
					text=""
					style_pad_all="2px"
					width="content"
					height="content"/>
			</lv_obj>
			<lv_obj
				name="items"
				width="100%"
				height="content"
				flex_flow="column"
				flex_grow="1">
			</lv_obj>
			<lv_obj
				name="box_default"
				width="100%"
				height="content"
				flex_flow="row"
				hidden="true">
				<style name="wrapper_box"/>
				<lv_label
					text="Default:"
					style_pad_all="2px"
					width="content"
					height="content"/>
				<lv_label
					name="lbl_default"
					text=""
					style_pad_all="2px"
					width="content"
					height="content"/>
			</lv_obj>
			<lv_obj
				name="box_timeout"
				width="100%"
				height="content"
				flex_flow="row"
				hidden="true">
				<style name="wrapper_box"/>
				<lv_label
					text="Timeout:"
					style_pad_all="2px"
					width="content"
					height="content"/>
				<lv_label
					name="lbl_timeout"
					text=""
					style_pad_all="2px"
					width="content"
					height="content"/>
				<lv_label
					text="seconds"
					style_pad_all="2px"
					width="content"
					height="content"/>
			</lv_obj>
			<lv_button
				name="btn_boot"
				width="100%"
				height="content"
				style_pad_all="8px"
				style_margin_top="8px"
				disabled="true">
				<lv_label
					text="Boot"
					width="100%"
					height="content"
					style_text_align="center"/>
			</lv_button>
		</lv_obj>
	</view>
</screen>
